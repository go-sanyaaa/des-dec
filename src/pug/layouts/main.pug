doctype html

block variables
    -
        var title


html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description" content="Дизайн штор")
        meta(name="keywords" content="Шторы")
        link(rel="stylesheet", href="./styles/main.css")
        title= title
    body
        #app.template
            include ../base/header
            div.content
              block content
            include ../base/footer
        script(defer,src="./js/bundle.js")

